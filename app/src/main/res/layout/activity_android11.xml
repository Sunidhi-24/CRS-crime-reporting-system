<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android11"
    android:orientation="vertical"
    android:background="#8DE6F1">
    <Button
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="310dp"
        android:background="@drawable/button_background"
        android:text="LOG out" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/button_background"
        android:elevation="65dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_gravity="center"
            android:text="\t\t\t\t\t\t\t\t\tCRIME\n\tREPORTING\n\t\t\t\t\t\t\tSYSTEM"
            android:textSize="50dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#C0F8F2"
        app:cardCornerRadius="50dp"
        app:cardElevation="80dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CASES "
            android:layout_marginLeft="80dp"
            android:textColor="#1434A4"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check the cases"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            android:textColor="#5D7AE1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>

        <Button
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:background="@drawable/button_background"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="100dp"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>