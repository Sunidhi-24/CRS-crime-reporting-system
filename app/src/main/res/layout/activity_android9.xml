<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8DE6F1"
    android:orientation="vertical"
    tools:context=".android9">

    <Button
        android:id="@+id/logout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="310dp"
        android:background="@drawable/button_background"
        android:text="LOG out" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/button_background"
        android:elevation="65dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:fontFamily="serif"
            android:text="\t\t\t\t\t\t\t\t\tCRIME\n\tREPORTING\n\t\t\t\t\t\t\tSYSTEM"
            android:textSize="50dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:fontFamily="serif"
        android:text=" Report what type of crime"
        android:textColor="#1434A4"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:text="CYBERCRIME\t\t\t\t\t\tROBBERY"
        android:textColor="#1434A4"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:text="FRAUD\t\t\t\t\t\t\t\t\t\t\tKIDNAPPING"
        android:textColor="#1434A4"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:text="MURDER\t\t\t\t\t\t\t\tDRUG TRAFFICKING"
        android:textColor="#1434A4"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/crime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter the type of crime(From above choices)"
        android:fontFamily="serif"
        android:textColor="#1434A4"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:text="Explain the whole incident (below)"
        android:textColor="#1434A4"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/incident"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textbox"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:hint="Enter the text"
        android:inputType="text"
        android:textColor="#1434A4" />

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="Submit" />

</LinearLayout>